<!doctype html>
<html>
<head>
	<title>Massage Massage Massage</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
</head>
<body>
<div class="container">
	<div class="page-header text-center">
			<h1>Massage Massage Massage</h1>
			<% if (user) { %>
				<h2><%= user.name %></h2>
				<a href="/profile" class="btn btn-default btn-sm">Profile</a><a href="/logout" class="btn btn-default btn-sm">Logout</a>
			<% } %>
	</div>

	<div class="row">
		<div class="col-sm-12">
			<div class="well">
					<p>
						<%= msg.text %><br>
						<strong>tag</strong>: <%= msg.tag %>
					</p>
			</div>
		</div>
	</div>
	<% if (pwn) { %>
		<form action="/edit" method="post">
			<div class="form-group">
				<label>Tag  </label><input type="text" class="form-control" name="ntag" value="<%= msg.tag %>">
			</div>
			<div class="form-group">
				<label>new Text </label><input type="text" class="form-control" name="ntext">
			</div>
			<input type="hidden" name="tag" value="<%= msg.tag %>">
			<button type="submit" class="btn btn-sm">edit</button>
		</form>
	<% } %>

</div>
</body>
</html>
